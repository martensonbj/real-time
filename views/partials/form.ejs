    <input class="center" type="text" name="poll[options][]" placeholder="Poll Option">
    <input class="center" type="text" name="poll[options][]" placeholder="Poll Option">
    <input class="center" type="text" name="poll[options][]" placeholder="Poll Option">
  </fieldset>
